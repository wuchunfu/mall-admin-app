/* pages/product/detail/detail.wxss */
page{
  background-color: #F2F2F2;
}
.goods-message{
  width: 90%;
  height: auto;
  background-color: white;
  padding: 3% 5% 2% 5%;
  margin-bottom: 6px; 
}
.goods-message .price{
  font-size: 42rpx;
  color: red;
}
.goods-message .char{
  font-size: 14px;
  padding-right: 6px;
}
.goods-message .title{
  font-size: 32rpx;
  display: block;
  background-color: white;
}
.goods-message .data{
  font-size: 12px;
  color: rgb(90, 89, 89);
  padding: 3% 0% 0% 0%;
}
.goods-message .data .amount{
  margin-right: 20%;
}
.goods-message .data .sales{
  width: auto;
}
.goods-cell-title{
  font-size: 13px;
  color: rgb(89, 89, 90);
}
.goods-cell-value{
  font-size: 13px;
  color: rgb(69, 69, 70);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  line-height: 25px;    
  max-height: 25px;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.popup-view{
  width: 100%;
  height: 100px;
}
.popup-title{
  width: 100%;
  text-align: center;
  font-size: 15px;
  margin-top: 3%;
  color: rgb(59, 59, 59);
}
.popup-content{
  margin: 6%;
  width: auto;
  display: inline-block;
}
.popup-content text{
  font-size: 13px;
  color: rgb(89, 89, 90);
  margin: 0% 5% 1% 2%; 
}
.popup-bottom{
  width: 100%;
  height: auto;
  bottom: 0px;
  position: fixed;
}
.popup-button{
  width: 94%;
  margin: 3%;
}
.footer{
  width: 100%;
  text-align: center;
  padding: 6% 0% 39% 0%;
  font-size: 10px;
  color: rgb(95, 95, 97);
}
